<!-- view/activities.ejs -->

<div class="container">
	<h2><%= title %></h2>
	<br>
	<p>학생 <%= (title==='Campus' ? '교내활동' : '교외활동') %> 목록입니다.</p>
	<table class="table table-striped table-hover">
	<thead>
		<tr>
		<th>활동(부서)명</th>
		<th>종류</th>
		<th>시작일</th>
		<th>종료일</th>
		<th>삭제</th>
		<th>상세설명</th>
		</tr>
	</thead>
	<tbody>
	<% if(typeof(data) !== "undefined"){ %>
	<% data.forEach(function (item,index){ %>
	<tr>
		<td>
		<a href='/<%= userId+'/'+(title==='Campus' ? 'campus' : 'extracurricular')+'/'+item.id %>/edit'><%= item.name %></a>
		</td>
		<td>
		<%= item.type %>
		</td>
		<td class='date'>
		<%= item.startdate %>
		</td>
		<td class='date'>
		<%= item.enddate %>
		</td>
		<td>
		<form id='frm-<%= item.id %>' action='/activities/delete/<%= userId %>' method="post"> 
			<input type='hidden' name='id' value=<%= item.id %> />
			<a class="delete" id="-<%= item.id %>" href="#">삭제</a>
		</form>
		</td>
		<td>
		<%= item.text %>
		</td>

	</tr>
		<% })%>
	<% } %>
	</tbody>
	</table>
	<div>
	<a href="/<%= userId+'/'+(title==='Campus' ? 'campus' : 'extracurricular') %>/new/edit"><button type="button" class="btn btn-primary left-btn">추가하기</button></a>
	<p class="text-count">
   		<%= data.length %> <%= (title==='Campus' ? 'campus' : 'extra curiccular') %> activities. 
    </p>

	</div>

</div>


