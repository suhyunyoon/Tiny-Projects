<!-- view/edit/activities.ejs -->

<div class="container rounded p-4 bg-light">
	<h2><%= title %></h2>
	<br>
	<p><%= (title==='Campus' ? '교내활동' : '교외활동') %> <%= typeof(data)!=='undefined'? '수정' : '추가' %></p>
	<br>
	<form action="/activities/<%= userId %>" method="post">
		<input type="hidden" id="iscampus" name="iscampus" value=<%= (title==='Campus' ? 0 : 1) %> />
		<input type="hidden" id="id" name="id" value=<%= typeof(data)!=='undefined' ? data.id : '' %> />
		<div class="form-group">
	    	<label for="name">활동(부서)명</label>
	        <input type="text" id="name" name="name" value="<%= typeof(data)!=='undefined'? data.name : '' %>" class="form-control" required>
	    </div>
<div class="form-group">
	    	<label for="type">종류</label>
	        <input type="text" id="type" name="type" value="<%= typeof(data)!=='undefined'? data.type : '' %>" class="form-control" required>
	    </div>
		<div class="form-group">
	    	<label for="startdate">시작일</label>
	        <input type="date" id="startdate" name="startdate" <%= typeof(data)!=='undefined'? 'value=' + data.startdate : '' %> class="form-control" required>
	    </div>
		<div class="form-group">
	    	<label for="enddate">종료일</label>
	        <input type="date" id="enddate" name="enddate" <%= typeof(data)!=='undefined'? 'value=' + data.enddate : '' %> class="form-control" required>
	    </div>
		<div class="form-group">
          <label for="text">상세설명</label>
          <textarea id="text" name="text" rows="3" class="form-control"><%= typeof(data)!=='undefined'? data.text : '' %></textarea>
        </div>
		<br> 
    	<div>	
       		<button type="submit" class="btn btn-primary"><%= typeof(data)!=='undefined'? '수정' : '추가' %></button>
   		</div>
	</form>

</div>
